extends ../layout

block content
	h1.
		User ID #{user._id}
	form(action='/users/#{user._id}/edit',method='post',name='updateuser',enctype='application/x-www-form-urlencoded')
		p Name:
			input#inputName(type='text', value='#{user.name}', name='name')
		p Age:
			input#inputAge(type='number', value='#{user.age}', name='age')
		p DOB:
			input#inputDob(type='date', value='#{userdob}', name='dob')
		p Are you Loved?:
			input#inputIsLoved(type='checkbox', name='isloved', checked=('#{user.isloved}'==='true' ? "checked" : undefined))
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update
